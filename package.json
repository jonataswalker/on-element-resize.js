{
  "name": "watch-element-resize.js",
  "version": "2.0.0",
  "description": "A (yet another) cross-browser, event-based, element resize watcher.",
  "main": "build/watch-element-resize.min.js",
  "browser": "build/watch-element-resize.min.js",
  "author": "Jonatas Walker",
  "homepage": "https://github.com/jonataswalker/watch-element-resize.js",
  "license": "MIT",
  "rollup": {
    "entry": "src/base.js",
    "dest": "build/watch-element-resize.js",
    "moduleName": "WatchElementResize"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/jonataswalker/watch-element-resize.js.git"
  },
  "bugs": {
    "url": "https://github.com/jonataswalker/watch-element-resize.js/issues"
  },
  "keywords": [
    "resize",
    "events"
  ],
  "devDependencies": {
    "casperjs": "^1.1.1",
    "eslint": "^3.4.0",
    "nodemon": "^1.9.2",
    "rollup": "^0.35.6",
    "rollup-plugin-buble": "^0.14.0",
    "rollup-plugin-json": "^2.0.0",
    "uglify-js": "^2.6.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "amd": true,
      "commonjs": true,
      "node": false
    },
    "rules": {
      "block-scoped-var": 1,
      "dot-notation": 1,
      "no-alert": 2,
      "no-caller": 2,
      "no-eval": 2,
      "no-proto": 1,
      "no-redeclare": 2,
      "valid-typeof": 2,
      "no-unreachable": 2,
      "no-irregular-whitespace": 1,
      "no-invalid-regexp": 1,
      "no-func-assign": 2,
      "no-extra-semi": 2,
      "no-dupe-keys": 2,
      "no-undef": 2,
      "no-use-before-define": 2,
      "no-unused-vars": 1,
      "strict": [
        1,
        "global"
      ],
      "key-spacing": 0,
      "new-cap": 1,
      "quotes": [
        1,
        "single"
      ]
    }
  }
}
